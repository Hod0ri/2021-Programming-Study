<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HiWidgetActivity">

    <Button
        android:id="@+id/btn_testTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E38484"
        android:text="Time Widget"
        android:onClick="onTimeClick"
        />

    <Button
        android:id="@+id/btn_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D250E8"
        android:text="Scroll View Widget"
        android:onClick="onScrollClick"
        />

    <Button
        android:id="@+id/btn_slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D250E8"
        android:text="Slide Widget"
        android:onClick="onSlideClick"
        />

    <Button
        android:id="@+id/btn_flip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D250E8"
        android:text="Flip Widget"
        android:onClick="onFlipClick"
        />

</LinearLayout>