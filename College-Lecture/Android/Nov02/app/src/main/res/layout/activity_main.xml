<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_draw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E38484"
        android:text="Draw Activity" />

    <Button
        android:id="@+id/btn_IntentTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4A81B1"
        android:text="IntentTest Activity" />

    <Button
        android:id="@+id/btn_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#57B86F"
        android:text="FileTest Activity" />




</LinearLayout>